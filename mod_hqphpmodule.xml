<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>MOD_HQPHPMODULE</name>
	<creationDate>2023-06-01</creationDate>
	<author>Magnus Hasselquist</author>
	<authorEmail>magnus.hasselquist@gmail.com</authorEmail>
	<authorUrl>https://github.com/magnushasselquist</authorUrl>
	<copyright>Copyright 2023</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>HQ PHP MODULE</description>

	<files>
		<filename module="mod_hqphpmodule">mod_hqphpmodule.php</filename>
		<folder>tmpl</folder>
		<filename>mod_hqphpmodule.xml</filename>
	</files>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="MOD_HQPHPMODULE">https://github.com/magnushasselquist/hqphpmodule/mod_hqphpmodule.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="url"
					label="MOD_FOO_URL_LABEL"
					description="MOD_FOO_URL_DESCRIPTION"
					hint="https://www.example.com"
					filter="url"
					validate="url"
				/>
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>